datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Articles {
  author          Authors?   @relation(fields: [authorId], references: [id])
  authorId        String?
  commentsItems   Comments[]
  content         String?
  createdAt       DateTime   @default(now())
  id              String     @id @default(cuid())
  publicationDate DateTime?
  title           String?
  updatedAt       DateTime   @updatedAt
}

model Comments {
  article         Articles? @relation(fields: [articleId], references: [id])
  articleId       String?
  content         String?
  createdAt       DateTime  @default(now())
  id              String    @id @default(cuid())
  publicationDate DateTime?
  updatedAt       DateTime  @updatedAt
  user            User?     @relation(fields: [userId], references: [id])
  userId          String?
}

model Authors {
  articlesItems  Articles[]
  bio            String?
  createdAt      DateTime   @default(now())
  id             String     @id @default(cuid())
  name           String?
  profilePicture Json?
  updatedAt      DateTime   @updatedAt
}

model Tags {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}

model Categories {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
}

model User {
  commentsItems Comments[]
  createdAt     DateTime   @default(now())
  email         String?    @unique
  firstName     String?
  id            String     @id @default(cuid())
  lastName      String?
  password      String
  roles         Json
  updatedAt     DateTime   @updatedAt
  username      String     @unique
}
